# =====================================================
# Dominican Shuttle - Variables de Entorno
# =====================================================

# Base de datos
DATABASE_URL=postgresql://postgres:[password]@[host]:5432/postgres

# Supabase
VITE_SUPABASE_URL=https://[project-id].supabase.co
VITE_SUPABASE_ANON_KEY=[anon-key]
SUPABASE_SERVICE_ROLE_KEY=[service-role-key]

# Configuración de la aplicación
NODE_ENV=development
PORT=5000

# Configuración de la empresa
COMPANY_NAME=Dominican Transport Pro
COMPANY_PHONE=+1 (809) 444-8800
COMPANY_EMAIL=info@dominicantransportpro.com
COMPANY_WHATSAPP=18094448800

# Notificaciones
NOTIFICATION_PHONE=+1 (809) 444-8800
WHATSAPP_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true

# Configuración de reservas
MAX_ADVANCE_BOOKING_DAYS=90
MIN_ADVANCE_BOOKING_HOURS=2
DEFAULT_BOOKING_STATUS=pending
AUTO_CONFIRM_BOOKING=false

# Configuración de pagos
REQUIRE_PAYMENT_CONFIRMATION=false
CURRENCY=USD

# Configuración regional
TIMEZONE=America/Santo_Domingo
DEFAULT_LANGUAGE=es
SUPPORTED_LANGUAGES=es,en

# Configuración de seguridad
JWT_SECRET=your-jwt-secret-here
BCRYPT_ROUNDS=10

# Configuración de archivos
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de cache
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Configuración de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Dominican Transport Pro <noreply@dominicantransportpro.com>

# Configuración de WhatsApp (opcional)
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER=18094448800

# Configuración de analytics (opcional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
FACEBOOK_PIXEL_ID=XXXXXXXXX

# Configuración de mapas (opcional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Configuración de monitoreo (opcional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key
